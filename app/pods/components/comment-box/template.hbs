<li>
  &middot;

  <span data-test-id="text">
    {{#if (or (not isLong) isExpanded)}}
      {{comment.text}}

    {{else}}
      {{truncate comment.text 24}}...

    {{/if}}
  </span>

  {{#if isLong}}
    <a href="#"
      {{action (toggle "isExpanded" this)}}
      class="text-grey-dark no-underline"
      data-test-id={{if isExpanded "show-less" "show-more"}}>
        Show {{if isExpanded "less" "more"}}</a>
  {{/if}}

  <em class='i' data-test-id="author">â€“ {{comment.author}}</em>

</li>
