<div class="flex mt3">
  <div class="w-75">
    <h1 class='mt0 w-100'>
      {{input value=model.title class='w-100 pa2'}}
    </h1>

    <div class="mt3">
      {{textarea value=model.text rows=20
        class='pa2 b--light-gray w-100'}}
    </div>
  </div>

  <div class="w-25 pl4">

    {{#network-status as |status|}}

      {{#ui-button
        task=save
        disabled=status.isOffline
        data-test-id="save"}}
        Save
      {{/ui-button}}

      {{#if status.isOffline}}
        <p class='mt3 red' data-test-id="error">
          Looks like you're offline! You won't be
          able to save this post.
        </p>
      {{/if}}

    {{/network-status}}

    {{#if save.last.isError}}
      <p class='mt3 red' data-test-id="error">
        {{fa-icon 'exclamation-circle'}}
        Whoops - your post was not saved. Please try again!
      </p>
    {{/if}}
  </div>
</div>
